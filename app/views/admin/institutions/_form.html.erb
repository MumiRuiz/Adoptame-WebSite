  </div>
  <div class="field">
    <%= f.label :username, "Usuario" %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email, "Email" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password,"Contraseña" %><br>
    <%= f.text_field :password %>
  </div>
  
  <div class="field">
    <%= f.label :country, "País" %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :region, "Región" %><br>
    <%= f.text_field :region %>
  </div>
  <div class="field">
    <%= f.label :city, "Ciudad" %><br>
    <%= f.text_field :city %>
  </div>
   <div class="field">
    <%= f.label :manager, "Representante Legal" %><br>
    <%= f.text_field :manager %>
  </div>
  <div class="field">
    <%= f.label :website, "Sitio Web" %><br>
