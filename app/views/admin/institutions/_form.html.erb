      <h2><%= pluralize(@admin_institution.errors.count, "error") %> Prohibido crear la el Administrador de Insituciones</h2>

      <ul>
      <% @admin_institution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= f.label :logo %><br />
  <%= f.file_field :logo %>
</div>

  <div class="field">
    <%= f.label :name, "Nombre" %><br>
