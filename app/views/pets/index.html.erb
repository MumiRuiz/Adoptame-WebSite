<!-- Main -->
    <div class="main" role="main">

    <section class="page-heading">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <h1>Mascotas</h1>
            </div>
            <div class="col-md-6">
              <ul class="breadcrumb">
                <li><a href="index.html">Inicio</a></li>
                <li><a href="#">¿Quiénes somos?</a></li>
                <li class="active">Mascotas</li>
              </ul>
            </div>
          </div>
        </div>
      </section>
      <!-- Page Heading / End -->






<!-- Page Content -->
      <section class="page-content">
        <div class="container">

          <ul class="team-list row">
            <% @pets.each do |pet| %>
            <li class="team-item col-md-3">
              <%= link_to pet_path(pet) do %> 
              <div class="team-item-inner">
                <figure class="team-thumb">
                 <%= image_tag pet.photo.url(:thumb) %>
                
                  <div class="overlay"></div>
                   
                </figure>

                <header class="team-head">
                  <h5 class="team-name"><%= pet.name %></h5>
                  <span class="team-head-info"></span>
                     <i class="entypo location"></i> <%= pet.city %><br />
                     <i class="entypo vcard"></i> <%= pet.age %> Meses<br />
                     <i class="entypo direction"></i><%= pet.gender %><br />
                     <i class="entypo direction"></i><%= pet.size %>
                         
                </header>
                <div class="team-excerpt">
                 
                </div>
              </div>
               <% end %>
            </li>
                <% end %>

          </ul>




          </div>
      </section>




<br>

